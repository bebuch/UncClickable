{
  "name": "uncclickable",
  "version": "1.0",
  "description": "Browser extension that converts UNC paths in code elements to clickable custom URL scheme links",
  "type": "module",
  "scripts": {
    "build": "esbuild src/content.js --bundle --outfile=dist/content.js --format=iife",
    "build:watch": "esbuild src/content.js --bundle --outfile=dist/content.js --format=iife --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests options",
    "lint:fix": "eslint src tests options --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate-icons": "bash scripts/generate-icons.sh"
  },
  "keywords": [
    "browser-extension",
    "unc",
    "manifest-v3",
    "firefox",
    "chrome",
    "edge"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "esbuild": "^0.27.3",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "jsdom": "^25.0.0",
    "prettier": "^3.0.0",
    "vitest": "^2.0.0"
  }
}
