{
  "manifest_version": 3,
  "name": "UncClickable",
  "version": "1.0.0",
  "description": "Converts UNC paths in code elements to clickable custom URL scheme links",

  "browser_specific_settings": {
    "gecko": {
      "id": "uncclickable@example.com",
      "strict_min_version": "128.0"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "UncClickable - Click to open settings"
  },

  "permissions": ["storage"],

  "background": {
    "scripts": ["src/background.js"],
    "service_worker": "src/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_end",
      "type": "module"
    }
  ],

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
}
